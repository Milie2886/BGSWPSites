{% extends 'layouts/base.html.twig' %}

{% block title 'Inscription' %}

{% block body %}
<main role="main" class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger " role="alert">{{ flashError }}</div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}

    {{ flashMessage }}

{% endfor %}
            
            <h1 class="my-3 text-center">Inscription</h1>

            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-6">
                {{ form_row(registrationForm.firstName, {
                    label: 'Prénom'
                }) }}
                </div>
                <div class="col-md-6">
                {{ form_row(registrationForm.lastName, {
                    label: 'Nom'
                }) }}
                </div>    
            </div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary btn-lg btn-block" formnovalidate>S'enregistrer</button>
                <p class="mt-5 mb-3 text-center text-muted">
                    Vous avez déjà un compte? <a href="{{ path('app_login') }}"> Connectez vous!</a>
                </p>
                {{ form_end(registrationForm) }}
        </div>
    </div>
</main>
{% endblock %}
