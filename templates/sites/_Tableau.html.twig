<div class="table-responsive">
    <table class="table table-striped table-md mydatatable">
        <thead>
        <tr>
            <th>Name</th>
            <th>URL</th>
            <th class="text-center">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for site in sites %}
        <tr>
            <td><a href="{{ path('app_sites_show', {id: site.id}) }}">{{ site.name }}</a></td>
            <td>{{ site.url }}</td>
            <td class="text-center">
                <a href="{{ path('app_sites_edit', {id: site.id}) }}" class="btn btn-primary btn-sm">Editer</a>
                <!--Afin de récupérer la méthode DELETE, on doit créer un bouton de formulaire et y assigner la méthode cachée DELETE-->
                
                <form method="post" action="{{ path('app_sites_delete', {id:site.id}) }}"  style="display: inline-block" class="justify-content-center" onsubmit="return confirm('Etes-vous vraiment sûr?')">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token('site_deletion_' ~ site.id) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>