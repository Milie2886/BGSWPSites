{% extends 'layouts/base.html.twig' %}

{% block title 'Mon compte' %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <h1 class="my-5">Mon compte</h1>

        <img src="{{ app.user.gravatar }}" alt="Avatar de {{ app.user.firstName }}" class="shadow rounded-circle">
        
        <h2 class="mt-5 mb-2">{{ app.user.firstName }} {{ app.user.lastName }}</h2>

        <hr>
        
        <p>&#8986; Compte créé le {{ app.user.createdAt|date('d/m/Y') }}</p>
        
        <p class="mt-4 lead">{{ app.user.Email }}</p>


        <p>
            <a href="{{ path('app_account_edit') }}">Modifier mon compte</a> | 
            <a href="#">Modifier mon mot de passe</a>
        </p>
    </div>
</div>
{% endblock %}