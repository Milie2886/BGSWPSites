{% extends 'layouts/base.html.twig' %}

{% block title 'Connexion' %}

{% block body %}
<div class="row">
    <div class="col-md-4 mx-auto">
        <h1 class="mt-5 mb-3 text-center">Connexion</h1>
        <form method="post">
        
            {% if error %}
                <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" value="{{ last_username }}" name="email" id="email" class="mb-3 form-control" required autofocus>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="mb-3 form-control" required>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-between">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" class="custom-control-input" name="_remember_me" id="remember_me">
                        <label class="custom-control-label" for="remember_me">Remember me</label>
                    </div>
                    <a href="#">Mot de passe oublié?</a>
                </div>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <button class="btn btn-lg btn-block btn-primary" type="submit">Se connecter!</button>

            <p class="mt-5 mb-3 text-center text-muted">Pas encore inscrit(e)? <a href="{{ path('app_register') }}"> Créez un compte!</a></p>
        </form>
    </div>
</div>

{% endblock %}
